# Disable BLE Actor & Power Saving
CONFIG_ENABLE_BLE_ACTOR=n
CONFIG_DISABLE_WIFI_PS=y

# Set the Wi-Fi bufffer sizes to the defaults
CONFIG_ESP32_WIFI_STATIC_RX_BUFFER_NUM=10
CONFIG_ESP32_WIFI_DYNAMIC_RX_BUFFER_NUM=32
CONFIG_ESP32_WIFI_DYNAMIC_TX_BUFFER_NUM=32

# Enable Wi-Fi IRAM optimization
CONFIG_ESP32_WIFI_IRAM_OPT=y
CONFIG_ESP32_WIFI_RX_IRAM_OPT=y

# Disable unused features
CONFIG_ENABLE_I2C=n
CONFIG_ENABLE_EPAPER_DISPLAY=n
CONFIG_UACTOR_ENABLE_HEAP_TRACKING=n
CONFIG_ESP_TASK_WDT_CHECK_IDLE_TASK_CPU0=n
CONFIG_ESP_TASK_WDT_CHECK_IDLE_TASK_CPU1=n
CONFIG_TASK_WDT_CHECK_IDLE_TASK_CPU0=n
CONFIG_TASK_WDT_CHECK_IDLE_TASK_CPU1=n