
# Enable benchmark logging
CONFIG_BENCHMARK_ENABLED=y

# GCC -O2 mode
CONFIG_COMPILER_OPTIMIZATION_PERF=y

# 240 Mhz & 1000 HZ Tickrate
CONFIG_FREERTOS_HZ=1000
CONFIG_ESP32_DEFAULT_CPU_FREQ_240=y
CONFIG_ESP32_DEFAULT_CPU_FREQ_MHZ=240
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="4MB"

# Enable BLE actor & disable Wi-Fi power saving
CONFIG_BT_ENABLED=y
CONFIG_BTDM_CTRL_MODE_BLE_ONLY=y
CONFIG_BT_NIMBLE_ENABLED=y
CONFIG_ENABLE_BLE_ACTOR=y
CONFIG_DISABLE_WIFI_PS=n

CONFIG_LWIP_USE_ONLY_LWIP_SELECT=y
# Used for some legacy experiments, can most likely be removed
CONFIG_LWIP_MAX_ACTIVE_TCP=16
CONFIG_LWIP_MAX_LISTENING_TCP=16

CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_OFFSET=0x8000
CONFIG_PARTITION_TABLE_MD5=y

# Enable Exceptions (msgpack-c requires exceptions)
CONFIG_COMPILER_CXX_EXCEPTIONS=y
CONFIG_COMPILER_CXX_EXCEPTIONS_EMG_POOL_SIZE=0

# WiFi Default Settings
CONFIG_ESP32_WIFI_STATIC_RX_BUFFER_NUM=10
CONFIG_ESP32_WIFI_DYNAMIC_RX_BUFFER_NUM=32
CONFIG_ESP32_WIFI_DYNAMIC_TX_BUFFER_NUM=32
CONFIG_ESP32_WIFI_IRAM_OPT=y
CONFIG_ESP32_WIFI_RX_IRAM_OPT=y

# disable platform actors, heap tracking, and telemetry
CONFIG_ENABLE_I2C=n
CONFIG_ENABLE_EPAPER_DISPLAY=n
CONFIG_ENABLE_GPIO_ACTOR=n
CONFIG_UACTOR_ENABLE_HEAP_TRACKING=n
CONFIG_UACTOR_ENABLE_TELEMETRY=n

# Disable watchdogs (required to evaluate the throughput)
CONFIG_ESP_TASK_WDT_CHECK_IDLE_TASK_CPU0=n
CONFIG_ESP_TASK_WDT_CHECK_IDLE_TASK_CPU1=n

# Wi-Fi:
CONFIG_WIFI_SSID="CHANGEME"
CONFIG_WIFI_USE_EDUROAM=n
CONFIG_WIFI_USERNAME=""
CONFIG_WIFI_PASSWORD="CHANGEME"
CONFIG_WIFI_NTP_SERVER="192.168.50.3"